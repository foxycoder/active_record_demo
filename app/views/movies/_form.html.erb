<%= form_for(@movie) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :plot %>
    <%= f.text_area :plot, class: 'form-control', rows: 4 %>
  </div>

  <div class="form-group">
    <%= f.label :picture %>
    <%= f.text_field :picture, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :release_date %>
    <%= f.date_select :release_date, class: 'form-control' %>
  </div>

  <div class="well">
    <h3>Director</h3>
    <%= f.fields_for(:director) do |d| %>
      <div class="form-group">
        <%= d.label :first_name %>
        <%= d.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= d.label :last_name %>
        <%= d.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= d.label :country %>
        <%= d.select :country, %w(DE NL US), prompt: true, class: 'form-control' %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Movie", class: 'btn btn-lg btn-success' %>
  </div>
<% end %>
